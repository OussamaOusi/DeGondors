                    <img id="rightImg" src="/images/lotrLogo.jpeg" alt="">
                </a>
                <img id="wrongImg" src="/images/pokemonLogo.png" alt="">
            </article>
            <article class="landingpageRow">
                <img id="wrongImg" src="/images/mgtLogo.png" alt="">
                <img id="wrongImg" src="/images/legoMastersLogo.jpeg" alt="">
                <img id="wrongImg" src="/images/fortniteLogo.jpeg" alt="">
            </article>
        </section>


        <script src="public/script.js"></script>
    </main>
</body>

</html>