<%- include("partials/header") %>

<body class="leaderboardBody">
    <header class="leaderboard_header">
        <%- include("partials/nav") %>
    </header>
        <main class="leaderboards-container">
          <section class="leaderboard">
              <article class="game-mode">10 Rounds</article>
              <table>
                  <thead>
                      <tr>
                          <th>Positie</th>
                          <th>Gebruiker</th>
                          <th>Score</th>
                      </tr>
                  </thead>
                  <tbody>
                      <% let pos10 = 1; (highscores || []).filter(entry => entry.mode === '10rounds').forEach(entry => { %>
                        <tr>
                            <td><%= pos10++ %></td>
                            <td><%= entry.username %></td>
                            <td><%= entry.score %></td>
                        </tr>
                      <% }) %>
                  </tbody>
              </table>
          </section>
  
          <section class="leaderboard">
            <article class="game-mode">Blitz</article>
              <table>
                  <thead>
                      <tr>
                          <th>Positie</th>
