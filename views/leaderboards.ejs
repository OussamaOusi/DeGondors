                      </tr>
                  </thead>
                  <tbody>
                     <% let posBlitz = 1; (highscores || []).filter(entry => entry.mode === 'blitz').forEach(entry => { %>
                        <tr>
                            <td><%= posBlitz++ %></td>
                            <td><%= entry.username %></td>
                            <td><%= entry.score %></td>
                        </tr>
                      <% }) %>
                  </tbody>
              </table>
          </section>
  
          <section class="leaderboard">
            <article class="game-mode">Sudden Death</article>
              <table>
                  <thead>
                      <tr>
                          <th>Positie</th>
                          <th>Gebruiker</th>
                          <th>Score</th>
                      </tr>
                  </thead>
                  <tbody>
                      <% let posSD = 1; (highscores || []).filter(entry => entry.mode === 'suddendeath').forEach(entry => { %>
                        <tr>
                            <td><%= posSD++ %></td>
                            <td><%= entry.username %></td>
                            <td><%= entry.score %></td>
                        </tr>
                      <% }) %>
                  </tbody>
              </table>
          </section>
      </main>

<%- include("partials/footer") %>